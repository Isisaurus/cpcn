    div.footer__info
        img(src="/img/cpcn_logo_double_white_bg.png", alt="cpcn logo").footer__logo
        nav.footer__nav
          a(href="https://www.facebook.com/groups/cpcn.nl/" target="_blank").footer__icon
            svg
                use(xlink:href="/img/sprite.svg#icon-facebook-square")
          a(href="http://instagram.com/chodskypesclub/" target="_blank").footer__icon
            svg
                use(xlink:href="/img/sprite.svg#icon-instagram")
          a(href="#").footer__link Sponsorship
          a(href="https://irp-cdn.multiscreensite.com/07069212/files/uploaded/Statuten%20CPCN%2020-07-2019.pdf" target="_blank").footer__link Statuten
