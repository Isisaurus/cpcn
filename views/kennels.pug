extends base

block content 
    main.main 
        section.section__header.margin-top-medium.margin-bottom-medium
            img(src="/img/cpcn_logo_tr.png", alt="cpcn logo")
            hr
            h1.header__primary kennel informatie
        section.section__kennels.margin-top-medium 
            .title__container 
                h2.title__header Kennels in Nederland 
            .section__kennels__container.margin-top-medium.padding-lr-medium 
                p.paragraph Al onze leden die fokken, dienen zich altijd te houden aan het Verenigingsfokreglement van de CPCN. Vragen over fokkers die niet in de fokkerslijst hieronder voorkomen, kunt u mailen naar secretaris@cpcn.nl.
                    br
                    br
                    | Hieronder vindt u een overzicht van de bij de CPCN geregistreerde fokkers.
                each kennel in kennels
                    .kennel.margin-bottom-medium.margin-top-medium 
                        img(src=`/img/breeders/${kennel.coverImg}`, alt=`${kennel.kennelName} kennel`)
                        .kennel__details
                            h3.header__tertiary
                                a(href=`mailto:${kennel.email}?cc=${kennel.email}`)=kennel.kennelName 
                                    svg.email__icon 
                                        use(xlink:href="/img/sprite.svg#icon-mail")
                            ul.kennel__details__list 
                                if (kennel.name)
                                    li.kennel__details__el
                                        svg 
                                            use(xlink:href="/img/sprite.svg#icon-user") 
                                        span=kennel.name 
                                if (kennel.phone)
                                    li.kennel__details__el
                                        svg 
                                            use(xlink:href="/img/sprite.svg#icon-phone") 
                                        span=kennel.phone
                                if (kennel.location)
                                    li.kennel__details__el
                                        svg 
                                            use(xlink:href="/img/sprite.svg#icon-map-pin") 
                                        span=kennel.location
                                if (kennel.website)
                                    li.kennel__details__el
                                        svg 
                                            use(xlink:href="/img/sprite.svg#icon-globe") 
                                        a(href=`${kennel.website}`)=kennel.website 
