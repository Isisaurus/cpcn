        section.section__stud__nl.margin-top-medium.margin-bottom-medium
            .title__container 
                h2.title__header Teven en reuen in Nederland
            .dogs.padding-lr-medium  
                p.paragraph Al onze leden die dekreuhouder of fokteefeinenaar zijn, dienen zich altijd te houden aan het Verenigingsfokreglement van de CPCN. Vragen over dekreuen of fokteven die niet in de lijst hieronder voorkomen, kunt u mailen naar secretaris@cpcn.nl.
                each dog in dogs
                    if (dog.NL)
                        .dog.margin-top-medium   
                            h3.header__tertiary=dog.title 
                            .dog__details 
                                table.dog__table 
                                    tr
                                        td Roepnaam 
                                        td=dog.nickname
                                    - if(dog.gender === "male")
                                        tr 
                                            td Geslacht 
                                            td reu
                                    - if(dog.gender === "female")
                                        tr 
                                            td Geslacht 
                                            td teef
                                    tr
                                        td Geboortedatum 
                                        td=dog.dateOfBirth.toLocaleDateString('nl-NL', {dateStyle: "short"}) 
                                    tr 
                                        td.kpcp KPCP* 
                                        td=dog.KPCP 
                                    tr 
                                        td.nhsb NHSB*
                                        td=dog.NHSB
                                    if (dog.kennelName)
                                        tr 
                                            td Kennelnaam
                                            td=dog.kennelName 
                                    -const healthTable = Object.entries(dog.health);
                                    each el in healthTable
                                        if (el[0]==='$init')
                                            | 
                                        else if (!el[1])
                                            | 
                                        else 
                                            tr 
                                                td=el[0]
                                                td=el[1]
                                div.dog__contact
                                    img(src=`/img/studs/${dog.image}`, alt=`${dog.title}`)
                                    div 
                                        a(href=`mailto:${dog.email}?cc=${dog.email}`)
                                            span Neem contact op 
                                            svg.dog__contact__icon 
                                                use(xlink:href="/img/sprite.svg#icon-mail") 
