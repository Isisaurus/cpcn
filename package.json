{
  "name": "cpcn",
  "version": "1.0.0",
  "description": "API for CPCN website.",
  "main": "app.js",
  "scripts": {
    "start:dev": "SET NODE_ENV=development&&nodemon server.js",
    "start": "node server.js",
    "devserver:style": "live-server --browser=firefox",
    "watch:sass": "node-sass sass/main.scss public/css/style.css -w",
    "start:style": "npm-run-all --parallel devserver:style watch:sass",
    "compile:sass": "node-sass sass/main.scss public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last versions\" public/css/style.comp.css -o public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js --public-url ./",
    "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js --public-url ./",
    "debug": "ndb server.js"
  },
  "author": "Diana Vitanyi",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.2",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.5.0",
    "hpp": "^0.2.3",
    "html-to-text": "^7.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.5",
    "mongoose-type-phone": "^1.0.1",
    "mongoose-type-url": "^2.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.1",
    "nodemailer": "^6.5.0",
    "pug": "^3.0.2",
    "pug-load": "^3.0.0",
    "slugify": "^1.5.0",
    "validator": "^13.6.0",
    "xss-clean": "^0.1.1"
  },
  "engines": {
    "node": "14.15.0",
    "npm": "6.14.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "clean-css-cli": "^5.3.0",
    "concat": "^1.0.3",
    "ndb": "^1.1.5",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-scss": "^4.0.0"
  }
}
